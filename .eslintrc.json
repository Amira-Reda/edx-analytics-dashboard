{
	"extends": "eslint-config-edx",
	"globals": {
		"gettext": true, // added by django for i18n
		"fixLanguageCode": true, // global function to correct window.language
		"setFixtures": true,  // added globally by jasmine-jquery
		"sinon": true // used for mocking
	},
	"rules": {
		"import/no-unresolved": "off", // 178 errors
	    "no-new" : "off", // 35 errors
	    "no-param-reassign" : "off", // 16 errors
	    "no-undef" : "off", // 20 errors
	    "array-callback-return" : "off", // 1 error
	    "no-restricted-syntax" : "off", // 3 errors
	    "global-require" : "off" // 21 errors
	}
}